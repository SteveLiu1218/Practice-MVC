@model Exercise.Models.Customers
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customers")) //這個using 就等於 </form> Bginform 就等於 <form>
{
     <div class="form-group">
         @Html.LabelFor(m => m.Name)
         @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
     </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BirthdayDate)
        @Html.TextBoxFor(m => m.BirthdayDate, new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m=>m.IsSubscribedToNewsletter) Subscribed to Newsletter?
        </label>
    </div>
}

