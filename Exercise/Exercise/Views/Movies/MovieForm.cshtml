@model Exercise.ViewModels.NewMoviesViewModel
@{
    ViewBag.Title = "CreateMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Movie</h2>
@using (Html.BeginForm("CreateMovie", "Movies")) //這個using 就等於 </form> Bginform 就等於 <form> 第一個參數是 action 第二個是controller
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate))
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:yyyy/MM/d}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Genres)
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genre, "Id", "GenreType"), "Select MemberShip Type", new { @class = "form-control" })
        
    </div>
    @Html.HiddenFor(m => m.Movie.Id)
    <button type="submit" class="btn btn-primary"> Save </button>
}


